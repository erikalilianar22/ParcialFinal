<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width>, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="/stylesheets/styleIndex.css" />
    <title>Document</title>
  </head>
  <body>
    <header class="header"><b>INGRESAR</b></header>
    <div class="container">
      <form mehod="post" class="form">
        <label for="codigo" class="label">Codigo:</label>
        <input type="text" class="text-field" name="codigo" id="codigo_field" placeholder="codigo" />

        <label for="marca" class="label">Marca:</label>
        <input type="text" class="text-field" name="marca" id="marca_field" placeholder="marca" />

        <label for="nombre" class="label">Nombre Producto:</label>
        <input type="text" class="text-field" name="nombre" id="nombre_field" placeholder="nombre producto" />

        <label for="peso" class="label">Peso:</label>
        <input type="text" class="text-field" name="peso" id="peso_field" placeholder="peso" />

        <label for="precio" class="label">Precio:</label>
        <input type="text" class="text-field" name="precio" id="precio_field" placeholder="precio" />
      </form>
    </div>
    <div class="div2">
      <button class="btn-guardar btn btn-danger" id="submit_btn" type="button">
        GUARDAR
        <img src="images/save.png" height="25px" width="25px" />
      </button>
      <button class="btn-guardar" type="submit">
        ACTUALIZAR
        <img src="images/update.jpg" height="25px" width="25px" />
      </button>
      <button class="btn-guardar" type="submit">
        MOSTRAR
        <img src="images/mostrar.png" height="25px" width="25px" />
      </button>
      <button class="btn-guardar" type="submit">
        ELIMINAR
        <img src="images/delete.png" height="25px" width="25px" />
      </button>
    </div>
    <section class="tabla">
      <table class="table table-hover">
        <thead>
          <tr class="table-dark">
            <th scope="col">CODIGO</th>
            <th scope="col">MARCA</th>
            <th scope="col">NOMBRE</th>
            <th scope="col">PESO</th>
            <th scope="col">PRECIO</th>
          </tr>
        </thead>
        <tbody id="table_body"></tbody>
      </table>
  </body>
  <script src="javascripts/main.js"></script>
</html>
